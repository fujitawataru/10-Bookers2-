<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>

      <% if @user.errors.any? %>
       <div id="error_explanation">
        <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul>
           <% @user.errors.full_messages.each do |message| %>
           <li><%= message %>
            <% end %>
            </li>
          </ul>
        </div>
       <% end %>

       <%= form_with model:@user,local:true do |f| %>
       <label for="user_name">Name</label>
        <p><%= f.text_field :name,class:"form-control name",id:"username"%></p>

       <label for="user_image">Image</label>
        <p><%= f.attachment_field :profile_image, placeholder: "name" %></p>

       <label for="user_introduction">introduction</label>
         <p><%= f.text_area :introduction, class:"form-control introduction",id:"user_introduction" %></p>

         <p><%= f.submit "Update User",class:"btn btn-secondary" %></p>
       <% end %>
    </div>
  </div>
</div>
